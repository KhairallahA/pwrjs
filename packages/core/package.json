{
    "name": "@pwrjs/core-beta",
    "version": "0.8.21",
    "description": "PWRJS is a javasrcipt library for interacting with the PWR network.",
    "author": "pwrlabs <devservices@pwrlabs.io>",
    "homepage": "",
    "license": "ISC",
    "main": "./lib/exports/main.js",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "files": [
        "lib"
    ],
    "exports": {
        ".": {
            "import": "./lib/exports/main/index.js",
            "types": "./lib/exports/main/index.d.ts"
        },
        "./types": {
            "import": "./lib/exports/types/index.js",
            "types": "./lib/exports/types/index.d.ts"
        },
        "./utils": {
            "import": "./lib/exports/utils/index.js",
            "types": "./lib/exports/utils/index.d.ts"
        },
        "./services": {
            "import": "./lib/exports/services/index.js",
            "types": "./lib/exports/services/index.d.ts"
        },
        "./wallet": {
            "import": "./lib/exports/wallet/index.js",
            "types": "./lib/exports/wallet/index.d.ts"
        }
    },
    "scripts": {
        "build": "npm run build:ts",
        "dev": "npm build:ts --watch",
        "build:ts": "tsc -p tsconfig.json",
        "dev:browser": "vite",
        "test": "vitest",
        "test:browser": "npx playwright test"
    },
    "dependencies": {
        "@noble/hashes": "^1.7.1",
        "axios": "^1.6.7",
        "bignumber.js": "^9.1.2",
